{
  "name": "@pascaliske/form-elements",
  "description": "Collection of form elements for Angular 6+ projects.",
  "version": "3.0.1",
  "license": "MIT",
  "homepage": "https://pascaliske.github.io/form-elements",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascaliske.dev",
    "url": "https://pascaliske.dev"
  },
  "repository": {
    "url": "https://github.com/pascaliske/form-elements.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/form-elements/issues"
  },
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "start": "ng serve form-elements-demo",
    "build": "run-s build:library build:scss build:metadata",
    "build:library": "ng build --configuration production",
    "build:scss": "scss-bundle --config scss-bundle.config.json",
    "build:metadata": "cp README.md dist/form-elements/README.md && cp LICENSE.md dist/form-elements/LICENSE.md && cp CHANGELOG.md dist/form-elements/CHANGELOG.md",
    "lint": "ng lint form-elements --fix",
    "format": "prettier --write \"{src,projects}/**/*.{ts,scss,md,html}\"",
    "version": "bump --yes package.json projects/form-elements/package.json",
    "changelog": "standard-changelog",
    "storybook": "start-storybook --port 9001 --config-dir .storybook --static-dir node_modules --ci",
    "docs": "build-storybook --config-dir .storybook --output-dir docs",
    "link": "yarn run build && cd dist/form-elements && yarn link",
    "unlink": "cd dist/form-elements && yarn unlink"
  },
  "prettier": "@pascaliske/prettier-config",
  "dependencies": {
    "@angular/animations": "^12.0.2",
    "@angular/common": "^12.0.2",
    "@angular/compiler": "^12.0.2",
    "@angular/core": "^12.0.2",
    "@angular/forms": "^12.0.2",
    "@angular/platform-browser": "^12.0.2",
    "@angular/platform-browser-dynamic": "^12.0.2",
    "@angular/router": "^12.0.2",
    "@fortawesome/angular-fontawesome": "^0.9.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-regular-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@pascaliske/html-helpers": "^1.5.10",
    "core-js": "^3.13.0",
    "rxjs": "^6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.2",
    "@angular/cli": "^12.0.2",
    "@angular/compiler-cli": "^12.0.2",
    "@angular/language-service": "^12.0.2",
    "@babel/core": "^7.14.3",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@pascaliske/prettier-config": "^1.1.2",
    "@pascaliske/schematics": "^0.0.12",
    "@pascaliske/storybook-helpers": "^1.1.2",
    "@rstacruz/bump-cli": "^2.0.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/angular": "^6.2.9",
    "@storybook/theming": "^6.2.7",
    "@types/faker": "^5.5.8",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^15.6.1",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.1",
    "choices.js": "^9.0.1",
    "codelyzer": "^6.0.2",
    "faker": "^5.5.3",
    "flatpickr": "4.6.9",
    "fuzzysearch": "^1.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "lodash-es": "^4.17.21",
    "ng-packagr": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "scss-bundle": "^3.1.2",
    "standard-changelog": "^2.0.27",
    "style-loader": "^2.0.0",
    "ts-node": "^10.0.0",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.2.4"
  }
}
