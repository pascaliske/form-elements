{
  "name": "form-elements",
  "description": "Collection of form elements for Angular 6+ projects.",
  "version": "1.1.1",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/form-elements.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/form-elements/issues"
  },
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve form-elements-demo",
    "build": "ng build",
    "build-scss": "scss-bundle -e projects/form-elements/src/lib/main.scss -d dist/form-elements/styles.scss",
    "copy-metadata": "cp README.md dist/form-elements/README.md && cp LICENSE.md dist/form-elements/LICENSE.md",
    "postbuild": "yarn run build-scss && yarn run copy-metadata",
    "test": "ng test form-elements",
    "lint": "ng lint form-elements",
    "format": "prettier --write \"{src,projects}/**/*.ts\"",
    "precommit": "lint-staged",
    "link": "yarn run build && cd dist/form-elements && yarn link",
    "unlink": "cd dist/form-elements && yarn unlink"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "lint-staged": {
    "{src,projects}/**/*.ts": [
      "yarn run lint",
      "yarn run format",
      "git add"
    ]
  },
  "dependencies": {
    "@angular/animations": "^6.1.3",
    "@angular/common": "^6.1.3",
    "@angular/compiler": "^6.1.3",
    "@angular/core": "^6.1.3",
    "@angular/forms": "^6.1.3",
    "@angular/http": "^6.1.3",
    "@angular/platform-browser": "^6.1.3",
    "@angular/platform-browser-dynamic": "^6.1.3",
    "@angular/router": "^6.1.3",
    "@pascaliske/html-helpers": "^1.2.1",
    "core-js": "^2.5.7",
    "flatpickr": "4.5.2",
    "fuzzysearch": "^1.0.3",
    "rxjs": "^6.2.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.4",
    "@angular-devkit/build-ng-packagr": "~0.7.4",
    "@angular/cli": "^6.1.4",
    "@angular/compiler-cli": "^6.1.3",
    "@angular/language-service": "^6.1.3",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.9.0",
    "codelyzer": "~4.4.4",
    "husky": "^0.14.3",
    "jasmine-core": "~3.2.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.3.0",
    "lint-staged": "^7.2.2",
    "ng-packagr": "^4.1.0",
    "prettier": "^1.14.2",
    "protractor": "~5.4.0",
    "scss-bundle": "^2.4.0",
    "ts-node": "~7.0.1",
    "tsickle": "^0.32.1",
    "tslib": "^1.9.3",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "~2.9.2"
  }
}
