{
  "name": "form-elements",
  "description": "Collection of form elements for Angular 6+ projects.",
  "version": "1.2.4",
  "license": "MIT",
  "author": {
    "name": "Pascal Iske",
    "email": "info@pascal-iske.de",
    "url": "https://pascal-iske.de"
  },
  "repository": {
    "url": "https://github.com/pascaliske/form-elements.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/pascaliske/form-elements/issues"
  },
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve form-elements-demo",
    "build": "ng build --prod",
    "build-scss": "scss-bundle -e projects/form-elements/src/lib/main.scss -d dist/form-elements/styles.scss",
    "copy-metadata": "cp README.md dist/form-elements/README.md && cp LICENSE.md dist/form-elements/LICENSE.md",
    "postbuild": "yarn run build-scss && yarn run copy-metadata",
    "lint": "ng lint form-elements --fix",
    "format": "prettier --write \"{src,projects}/**/*.ts\"",
    "changelog": "standard-changelog --release-count 1",
    "link": "yarn run build && cd dist/form-elements && yarn link",
    "unlink": "cd dist/form-elements && yarn unlink"
  },
  "greenkeeper": {
    "ignore": [
      "typescript"
    ]
  },
  "dependencies": {
    "@angular/animations": "^7.2.3",
    "@angular/common": "^7.2.3",
    "@angular/compiler": "^7.2.3",
    "@angular/core": "^7.2.3",
    "@angular/forms": "^7.2.3",
    "@angular/http": "^7.2.3",
    "@angular/platform-browser": "^7.2.3",
    "@angular/platform-browser-dynamic": "^7.2.3",
    "@angular/router": "^7.2.3",
    "@pascaliske/html-helpers": "^1.2.2",
    "core-js": "^2.6.3",
    "flatpickr": "4.5.2",
    "fuzzysearch": "^1.0.3",
    "rxjs": "^6.4.0",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.13.0",
    "@angular/cli": "^7.3.0",
    "@angular/compiler-cli": "^7.2.3",
    "@angular/language-service": "^7.2.3",
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/node": "~10.12.21",
    "codelyzer": "~4.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.1",
    "ng-packagr": "^4.7.0",
    "prettier": "^1.16.3",
    "protractor": "~5.4.2",
    "scss-bundle": "^2.4.0",
    "standard-changelog": "^2.0.6",
    "ts-node": "~8.0.2",
    "tsickle": "^0.34.0",
    "tslib": "^1.9.3",
    "tslint": "~5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "~3.2.2"
  }
}
